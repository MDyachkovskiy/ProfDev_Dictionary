<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_x_small"
        android:layout_marginStart="@dimen/margin_medium"
        >

        <TextView
            android:id="@+id/header_textview_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Header"
            style="@style/HeaderTextStyle"
            />

        <TextView
            android:id="@+id/phonetic_textview_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Phonetic"
            android:layout_marginStart="@dimen/margin_medium"
            style="@style/PhoneticTextStyle"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partofspeech_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_x_small"
        tools:listitem="@layout/item_part_of_speech"
        />

</LinearLayout>